<UserControl x:Class="FESScript2.Settings.Support.DirectoryChooser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FESScript2.Settings.Support"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Name="label" Content="" VerticalAlignment="Center"/>
        <local:TextBox x:Name="textBox" Grid.Column="1" OnTextChanged="textBox_OnTextChanged"/>
        <Button Content="..." Grid.Column="2" Margin="5" BorderThickness="1" Click="Button_Click" Background="#FFE5E5E5" Width="20" Height="20"/>
    </Grid>
</UserControl>
